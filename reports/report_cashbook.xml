<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_cashbook">
        <t t-call="web.html_container">
            <t t-set="data_report_margin_top" t-value="12"/>
            <t t-set="data_report_header_spacing" t-value="9"/>
            <t t-set="data_report_dpi" t-value="110"/>
            <t t-call="web.internal_layout">
                <div class="page">
                    <h2>Account Cash Book</h2>
                </div>
                <div class="row mt32">
                    <!--div class="col-4">
                        <strong>Journals:</strong>
                        <p t-esc="', '.join([ lt or '' for lt in print_journal ])"/>
                    </div-->

                    <div class="col-2">
                        <strong>Start Date:</strong>
                        <!-- <p t-esc="data['date_from']"/> -->
                        <span t-esc="request.env['account.move'].sudo().convert_datetime(data['date_from'])"/>
                    </div>
                    <div class="col-2">

                        <strong>End Date:</strong>
                        <!-- <p t-esc="data['date_to']"/> -->
                        <span t-esc="request.env['account.move'].sudo().convert_datetime(data['date_to'])"/>
                    </div>
                    <!--div class="col-2">
                        <div style="width:70%;">
                            <strong>Sorted By:</strong>
                            <p t-if="data['sortby'] == 'sort_date'">Date</p>
                            <p t-if="data['sortby'] == 'sort_journal_partner'">Journal and Partner</p>
                        </div>


                    </div>
                    <div class="col-2">
                        <strong>Target Moves:</strong>
                        <p t-if="data['target_move'] == 'all'">All Entries</p>
                        <p t-if="data['target_move'] == 'posted'">Posted Entries</p>
                    </div-->
                </div>
                <br/>

                <table class="table table-sm table-reports">
                    <thead>
                        <tr class="text-center">
                            <th>Date</th>
                            <!--th>JRNL</th-->
                            <th>Partner</th>
                            <!--th>Ref</th-->
                            <th>Move</th>
                            <th>Entry Label</th>
                            <!-- <th>Debit</th> -->
                            <!-- <th>Credit</th> -->
                            <th>Balance</th>
                            <th groups="base.group_multi_currency">Currency</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="Accounts" t-as="account">
                            <!-- <t t-set="init_balance_flag" t-value="'0'"/>
                            <t t-set="init_balance_line" t-value="'0'"/>

                            <t t-foreach="account['move_lines']" t-as="line">
                                <t t-if="line['lname'] and line['lname'] == 'Initial Balance'">
                                    <t t-set="init_balance_flag" t-value="'1'"/>
                                    <t t-set="init_balance_line" t-value="line"/>
                                </t>
                            </t> -->

                            <t t-if="init_balance">
                                <tr style="font-weight: bold;">
                                    <td colspan="3">
                                        <span style="color: white;" t-esc="'..'"/>
                                        <span t-esc="account['code']"/>
                                        <span t-esc="account['name']"/>
                                    </td>
                                    <td>
                                        <!--span t-esc="account['lname']"/-->
                                        <span>Balance Inicial</span>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="account['initial_balance']"
                                              t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                    </td>
                                    <td groups="base.group_multi_currency"/>
                                </tr>
                                <tr style="font-weight: bold;">
                                    <td colspan="3">
                                    </td>
                                    <td>
                                        <span>Total Debitos</span>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="account['debit']"
                                              t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                    </td>
                                    <td groups="base.group_multi_currency"/>
                                </tr>
                                <tr style="font-weight: bold;">
                                    <td colspan="3">
                                    </td>
                                    <td>
                                        <span>Total Creditos</span>
                                    </td>   
                                    <td class="text-right">
                                        <span t-esc="account['credit'] *-1"
                                              t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                    </td>
                                    <td groups="base.group_multi_currency"/>
                                </tr>
                                <tr style="font-weight: bold;">
                                    <td colspan="3">
                                    </td>
                                    <td>
                                        <span>Actual</span>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="account['debit'] - account['credit']"
                                              t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                    </td>
                                    <td groups="base.group_multi_currency"/>
                                </tr>
                                <tr style="font-weight: bold;">
                                    <td colspan="3">
                                    </td>
                                    <td>
                                        <span>Balance Final</span>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="account['balance']"
                                              t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                    </td>
                                    <td groups="base.group_multi_currency"/>
                                </tr>

                                <t t-foreach="account['move_lines']" t-as="line">
                                    <t t-if="line['lname'] != 'Initial Balance'">
                                        <tr>
                                            <td>
                                                <!-- <span t-esc="line['ldate']"/> -->
                                                <span t-esc="request.env['account.move'].sudo().convert_datetime(line['ldate'])"/>
                                            </td>
                                            <!--td>
                                                <span t-esc="line['lcode']"/>
                                            </td-->
                                            <td>
                                                <span t-esc="line['partner_name']"/>
                                            </td>
                                            <!--td>
                                                <t t-if="'pos_reference' in line">
                                                    <span t-esc="line['pos_reference']"/>
                                                </t>
                                                <t t-else="">
                                                    <span t-if="line['lref']" t-esc="line['lref']"/>
                                                </t>
                                            </td-->
                                            <td>
                                                <span t-esc="line['move_name']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['lname']"/>
                                            </td>
                                            <!-- <td class="text-right">
                                                <span t-esc="line['debit']"
                                                      t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td> -->
                                            <!-- <td class="text-right">
                                                <span t-esc="line['credit']"
                                                      t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td> -->
                                            <td class="text-right">
                                                <!-- <t t-set="amount_value" t-value="line['balance']"/>
                                                <t t-if="line['debit'] > 0">
                                                    <t t-set="amount_value" t-value="line['debit']"/>
                                                </t>
                                                <t t-else="line['credit'] > 0">
                                                    <t t-set="amount_value" t-value="-line['credit']"/>
                                                </t> -->

                                                <span t-esc="line['debit'] - line['credit']"
                                                      t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td>
                                            <td t-if="line['amount_currency']" class="text-right"
                                                groups="base.group_multi_currency">
                                                <span t-esc="line['amount_currency'] if line['amount_currency'] > 0.00 else ''"/>
                                                <span t-esc="line['currency_code'] if line['amount_currency'] > 0.00 else ''"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                            <t t-else="">
                                <tr style="font-weight: bold;">
                                    <td colspan="4">
                                        <span style="color: white;" t-esc="'..'"/>
                                        <span t-esc="account['code']"/>
                                        <span t-esc="account['name']"/>
                                    </td>
                                    <!-- <td class="text-right">
                                        <span t-esc="account['debit']"
                                              t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                    </td> -->
                                    <!-- <td class="text-right">
                                        <span t-esc="account['credit']"
                                              t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                    </td> -->
                                    <td class="text-right">
                                        <span t-esc="account['balance']"
                                              t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                    </td>
                                    <td groups="base.group_multi_currency"/>
                                </tr>
                                <tr t-foreach="account['move_lines']" t-as="line">
                                    <td>
                                        <!-- <span t-esc="line['ldate']"/> -->
                                        <span t-esc="request.env['account.move'].sudo().convert_datetime(line['ldate'])"/>
                                    </td>
                                    <!--td>
                                        <span t-esc="line['lcode']"/>
                                    </td-->
                                    <td>
                                        <span t-esc="line['partner_name']"/>
                                    </td>
                                    <!--td>
                                        <t t-if="'pos_reference' in line">
                                            <span t-esc="line['pos_reference']"/>
                                        </t>
                                        <t t-else="">
                                            <span t-if="line['lref']" t-esc="line['lref']"/>
                                        </t>
                                    </td-->
                                    <td>
                                        <span t-esc="line['move_name']"/>
                                    </td>
                                    <td>
                                        <span t-esc="line['lname']"/>
                                    </td>
                                    <!-- <td class="text-right">
                                        <span t-esc="line['debit']"
                                              t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                    </td> -->
                                    <!-- <td class="text-right">
                                        <span t-esc="line['credit']"
                                              t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                    </td> -->
                                    <td class="text-right">
                                        <t t-set="amount_value" t-value="line['balance']"/>
                                        <t t-if="line['debit'] > 0">
                                            <t t-set="amount_value" t-value="line['debit']"/>
                                        </t>
                                        <t t-else="line['credit'] > 0">
                                            <t t-set="amount_value" t-value="-line['credit']"/>
                                        </t>
                                        
                                        <span t-esc="amount_value"
                                              t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                    </td>
                                    <td t-if="line['amount_currency']" class="text-right"
                                        groups="base.group_multi_currency">
                                        <span t-esc="line['amount_currency'] if line['amount_currency'] > 0.00 else ''"/>
                                        <span t-esc="line['currency_code'] if line['amount_currency'] > 0.00 else ''"/>
                                    </td>
                                </tr>
                            </t>

                            
                        </t>
                    </tbody>

                </table>

            </t>
        </t>
    </template>

</odoo>